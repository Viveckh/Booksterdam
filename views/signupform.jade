// Sign up form for the users. Make any necessary modifications associated with the form here.

form#signup
    //Login Information like Email and password
    fieldset.form-group
        legend Login Information
        .row
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label.control-label(for='userEmail') *Email address
                    input#userEmail.form-control(name='userEmail', type='email', placeholder='E.g. example@provider.com', required)
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label(for='userPassword') *Password
                    input#userPassword.form-control(name='userPassword', type='password', placeholder='E.g. TopSecreT%14', required)
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label(for='userConfirmPassword') *Re-enter Password
                    input#userConfirmPassword.form-control(name='userConfirmPassword', type='password', placeholder='E.g. TopSecreT%14', required)

    //Personal Information for record keeping
    fieldset.form-group
        legend Personal Information
        .row
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label(for='userFname') *First Name
                    input#userFname.form-control(name='userFname', type='text', placeholder='E.g. Jim', required)
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label(for='userMname') Middle Name
                    input#userMname.form-control(name='userMname', type='text', placeholder='E.g. Dominic')
            .col-sm-4.col-md-4#custom-itemGrid
                .form-group
                    label(for='userLname') *Last Name
                    input#userLname.form-control(name='userLname', type='text', placeholder='E.g. Callandriello', required)
        
        .row
            .col-sm-6.col-md-4#custom-itemGrid
                .form-group
                    label(for='userStreet') Street
                    input#userStreet.form-control(name='userStreet', type='text', placeholder='E.g. 505 Chestnut Road')
            .col-sm-6.col-md-2#custom-itemGrid
                .form-group
                    label(for='userCity') City
                    input#userCity.form-control(name='userCity', type='text', placeholder='E.g. Somecity')
            .col-sm-3.col-md-2#custom-itemGrid
                .form-group
                    label(for='userZip') Zip
                    input#userZip.form-control(name='userZip', type='number', placeholder='E.g. 07452')
