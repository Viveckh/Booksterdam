extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top#custom-navBar
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Booksterdam
            #navbar.navbar-collapse.collapse
                //If logged in, display mini dash, else display the login form
                - if (sessionInfo.isLoggedIn) {
                    include miniDash
                - }
                - else {
                    include loginform
                - }

    .container   
        .page-header
            .form-group.has-feedback.custom-searchBar
                div
                    input.form-control#custom-searchBarText(type='text', maxlength='128', placeholder='Search using ISBN, Book Title, Author, Publisher or School')
                    span.icon.glyphicon.glyphicon-search.form-control-feedback#custom-searchBarIcon
        
        h1 Seems like we have a visitor, FINALLY!
        p.lead We're currently under construction, just like Trump's Executive Board.
        hr
        
        // Listing the items available in the shelves here
        .section#custom-shelves
            include shelves

        // Displaying customers Listing
        //.section#custom-customers
            include users
        
        // Website Footer
        footer
            p.pull-right
                a(href='http://www.viveckh.com') Developed by Viveckh
            p
                | © 2016 Booksterdam, Inc. · 
                a(href='#') Privacy 
                | · 
                a(href='#') Terms
