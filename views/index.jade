extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Booksterdam
            #navbar.navbar-collapse.collapse
                form.navbar-form.navbar-right
                    .form-group
                        input.form-control(type='text', placeholder='Email')
                    .form-group
                        input.form-control(type='password', placeholder='Password')
                    button.btn.btn-success(type='submit') Sign in
        // /.navbar-collapse



    .container
        .page-header
            h1 Seems like we have a visitor, FINALLY!
            p.lead We're currently under construction, just like Trump's Executive Board.

        h3 Ramapo College
        p Whaaazzzaap RoadRunner? See if we've got a book for you lurking around the arch.
        
        - var count = 0;
        each item in items
            // If it is the first element in the row, then create a new row
            - if (count == 0) {
                .row
            - }            
                // Add the item
                .col-md-4
                    | Item ID: #{item.itemID}
                    br
                    | School ID: #{item.schoolID}
                    br
                    | Seller ID: #{item.sellerID}
                    br
                    | ISBN: #{item.isbn}
                    br
                    | Price: $#{item.price}
            // Increase count to keep track of number of items in the row    
            - count++;
            //Resetting counter to move to the next row
            - if (count == 3) {
                - count = 0;
            - }
        .row
        hr

        h3 Rutgers University
        p Y'all got a HUGEEEEEE population, Folks. - Donald J. Trump
        
        - var count = 0;
        each item in items
            // If it is the first element in the row, then create a new row
            - if (count == 0) {
                .row
            - }            
                // Add the item
                .col-md-4
                    | Item ID: #{item.itemID}
                    br
                    | School ID: #{item.schoolID}
                    br
                    | Seller ID: #{item.sellerID}
                    br
                    | ISBN: #{item.isbn}
                    br
                    | Price: $#{item.price}
            // Increase count to keep track of number of items in the row    
            - count++;
            //Resetting counter to move to the next row
            - if (count == 3) {
                - count = 0;
            - }
        .row
        hr
  
    

        h1 Seller List...
        p
        table#table_Customers
                tr
                    th Customer ID
                    th Name
                    th Address
                    th Phone
                    th Email
                each person in customers
                    tr
                        td #{person.customerID}
                        td #{person.firstName} #{person.middleName} #{person.lastName}
                        td 
                            | #{person.street}
                            br
                            | #{person.city}, #{person.stateName} #{person.zipCode}
                            br
                            | #{person.country}
                        td #{person.phone}
                        td #{person.email}
        
        h1 Shelves items...
        p
        table#table_shelves
                tr
                    th Item ID
                    th Seller ID
                    th ISBN
                    th price
                each item in items
                    tr
                        td #{item.itemID}
                        td #{item.sellerID}
                        td #{item.isbn}
                        td #{item.price}

