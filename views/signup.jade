extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top#custom-navBar
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Booksterdam
            #navbar.navbar-collapse.collapse
                form.navbar-form.navbar-right
                    .form-group
                        input.form-control(type='text', placeholder='Email')
                    .form-group
                        input.form-control(type='password', placeholder='Password')
                    button.btn.btn-success(type='submit') Sign in
                // /.navbar-collapse

    .container   
        .page-header
            h4 We hate filling out forms too, but our hungry algorithms perform best only when they know your whereabouts.

        .section
            form#signup
                //Login Information like Email and password
                fieldset.form-group
                    legend Login Information
                    .row
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group.has-success.has-feedback
                                label.control-label(for='userEmail') *Email address
                                input#userEmail.form-control(type='email', placeholder='E.g. example@provider.com', required, aria-describedby='emailSuccessStatus')
                                span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
                                span#emailSuccessStatus.sr-only (success)
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userPassword') *Password
                                input#userPassword.form-control(type='password', placeholder='E.g. TopSecreT%14', required)
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userConfirmPassword') *Re-enter Password
                                input#userConfirmPassword.form-control(type='password', placeholder='E.g. TopSecreT%14', required)
                
                //Personal Information for record keeping
                fieldset.form-group
                    legend Personal Information
                    .row
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userFname') *First Name
                                input#userFname.form-control(type='text', placeholder='E.g. Jim', required)
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userMname') Middle Name
                                input#userMname.form-control(type='text', placeholder='E.g. Dominic')
                        .col-sm-4.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userLname') *Last Name
                                input#userLname.form-control(type='text', placeholder='E.g. Callandriello', required)
                    
                    .row
                        .col-sm-6.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userStreet') Street
                                input#userStreet.form-control(type='text', placeholder='E.g. 505 Chestnut Road')
                        .col-sm-6.col-md-2#custom-itemGrid
                            .form-group
                                label(for='userCity') City
                                input#userCity.form-control(type='text', placeholder='E.g. Somecity')
                        .col-sm-3.col-md-2#custom-itemGrid
                            .form-group
                                label(for='userZip') Zip
                                input#userZip.form-control(type='number', placeholder='E.g. 07452')
                        .col-sm-3.col-md-1#custom-itemGrid
                            .form-group
                                label(for='userState') State
                                select#userState.form-control
                                    option AK
                                    option AL
                                    option AR
                                    option AZ
                                    option CA
                                    option CO
                                    option CT
                                    option DC
                                    option DE
                                    option FL
                                    option GA
                                    option HI
                                    option IA
                                    option ID
                                    option IL
                                    option IN
                                    option KS
                                    option KY
                                    option LA
                                    option MA
                                    option MD
                                    option ME
                                    option MI
                                    option MN
                                    option MO
                                    option MS
                                    option MT
                                    option NC
                                    option ND
                                    option NE
                                    option NH
                                    option NJ
                                    option NM
                                    option NV
                                    option NY
                                    option OH
                                    option OK
                                    option OR
                                    option PA
                                    option RI
                                    option SC
                                    option SD
                                    option TN
                                    option TX
                                    option UT
                                    option VA
                                    option VT
                                    option WA
                                    option WV
                                    option WI
                                    option WY
                        .col-sm-6.col-md-3#custom-itemGrid
                            .form-group
                                label(for='userCountry') Country
                                input#userCountry.form-control(type='text', disabled, value='United States of America')
                    
                    .row
                        .col-sm-6.col-md-4#custom-itemGrid
                            .form-group
                                label(for='userSchool') *School
                                select(required='')#userSchool.form-control
                                    option
                                    option Ramapo College of New Jersey
                                    option Other
                        .col-sm-6.col-md-2#custom-itemGrid
                            .form-group
                                label(for='userPhone') *Phone
                                input#userPhone.form-control(type='tel', placeholder='E.g. 222-111-444', required)
                
                fieldset.form-group
                    .form-check
                        label.form-check-label
                        input.form-check-input(type='checkbox')
                        |       I agree to Booksterdam Terms and Conditions.
                
                fieldset.form-group
                    button.btn.btn-primary(type='submit') Submit

        // Website Footer
        footer
            p.pull-right
                a(href='http://www.viveckh.com') Developed by Viveckh
            p
                | © 2016 Booksterdam, Inc. · 
                a(href='#') Privacy 
                | · 
                a(href='#') Terms
